{
    "name": "shdl",
    "scopeName": "source.shdl",
    "patterns": [
        { "include": "#instantiateBlock" },
        { "include": "#keywords" },
        { "include": "#types" },
        { "include": "#variables" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#comments" }
    ],
    "repository": {
        "instantiateBlock": {
            "begin": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b\\s*:\\s*(?:(\\bextern\\b)\\s+)?(\\bentity\\b|\\bcomponent\\b)[^\\{]*\\{",
            "beginCaptures": {
                "2": { "name": "keyword.other.shdl" },
                "3": { "name": "keyword.other.shdl" }
            },
            "end": "\\}",
            "patterns": [
                { "include": "#keywords" },
                { "include": "#variables" },
                { "include": "#strings" },
                { "include": "#numbers" },
                { "include": "#comments" }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.shdl",
                    "match": "//.*"
                },
                {
                    "name": "comment.block.shdl",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "patterns": [{ "include": "#comments" }]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.shdl",
                    "match": "\\b(extern|use|package|type|component|impl|constant|signal|variable|file|if|else|for|switch|process|entity|wait|on|until|report|assert|while|struct|view|interface|of|out|in|to|downto|others|true|false)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "entity.name.type.shdl",
                    "match": "(?<=:\\s*(?:in|out)?\\s*\\[*)([a-zA-Z_][a-zA-Z0-9_]*)"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.name.shdl",
                    "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.shdl",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.shdl",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.shdl",
                    "match": "'(?:\\\\.|[^\\\\'])'",
                    "captures": {
                        "0": { "name": "constant.character.escape.shdl" }
                    }
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.shdl",
                    "match": "\\b[0-9]+(?:_[0-9]+)*(?:\\.[0-9]+(?:_[0-9]+)*)?\\b"
                }
            ]
        }
    }
}
