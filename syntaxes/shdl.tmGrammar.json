{
    "name": "shdl",
    "scopeName": "source.shdl",
    "patterns": [
        { "include": "#entityBlock" },
        { "include": "#keywords" },
        { "include": "#types" },
        { "include": "#variables" },
        { "include": "#strings" },
        { "include": "#comments" }
    ],
    "repository": {
        "entityBlock": {
            "begin": "(\\bentity\\b)[^\\{]*\\{",
            "beginCaptures": {
                "1": { "name": "keyword.other.shdl" }
            },
            "end": "\\}",
            "patterns": [
                { "include": "#keywords" },
                { "include": "#variables" },
                { "include": "#strings" },
                { "include": "#comments" }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.shdl",
                    "match": "//.*"
                },
                {
                    "name": "comment.block.shdl",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "patterns": [{ "include": "#comments" }]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.shdl",
                    "match": "\\b(use|package|type|component|impl|constant|signal|if|else|for|in|process|entity|wait|on|until|report|assert|while|struct|view|of|out|in|to|downto|others|true|false|fs|ps|ns|us|ms|sec|min|hr)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "entity.name.type.shdl",
                    "match": "(?<=:\\s*(?:in|out)?\\s*\\[*)([a-zA-Z_][a-zA-Z0-9_]*)"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.name.shdl",
                    "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.shdl",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.shdl",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.shdl",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.shdl",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        }
    }
}
